<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.BniQRIS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">#00897B</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BniQRIS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BniQRIS.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BniQRIS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IconCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">7dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Rectanggle">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">7dp</item>
    </style>

    <style name="Rectanggle1">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>